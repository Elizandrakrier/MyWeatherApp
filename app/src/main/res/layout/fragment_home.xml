<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_day"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="@string/txt_clima_home"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/text_home_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_sub_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginStart="24dp"
        android:text="@string/txt_sub_tempo"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_home_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_tempo"/>

    <TextView
        android:id="@+id/txt_localizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/rect_localizacao"
        android:alpha="0.3"
        android:text="@string/txt_localizacao"
        android:textSize="14sp"
        android:textColor="@color/text_home_color"
        app:layout_constraintTop_toBottomOf="@id/txt_sub_tempo"
        app:layout_constraintStart_toStartOf="@id/txt_sub_tempo"/>

    <TextView
        android:id="@+id/txt_atualizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/txt_sub_localizacao"
        android:textSize="10sp"
        android:textColor="@color/text_home_color"
        app:layout_constraintTop_toBottomOf="@id/txt_localizacao"
        app:layout_constraintStart_toStartOf="@id/txt_localizacao"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="236dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_dados"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@color/card_home_color"
        android:alpha="0.3"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="226dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_sensacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="40dp"
                android:text="@string/txt_sensacao"
                android:textSize="14sp"
                android:textColor="@color/text_home_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_num_sensacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="293dp"
                android:text="@string/txt_num_sensacao"
                android:textSize="14sp"
                android:textColor="@color/text_home_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_maxmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                android:text="@string/txt_max_min"
                android:textSize="14sp"
                android:textColor="@color/text_home_color"
                app:layout_constraintTop_toTopOf="@id/txt_sensacao"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_num_maxmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="293dp"
                android:text="@string/txt_num_max_min"
                android:textSize="14sp"
                android:textColor="@color/text_home_color"
                app:layout_constraintTop_toTopOf="@id/txt_num_sensacao"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_umidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                android:text="@string/txt_umidade"
                android:textSize="14sp"
                android:textColor="@color/text_home_color"
                app:layout_constraintTop_toTopOf="@id/txt_maxmin"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_num_umidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="293dp"
                android:textSize="14sp"
                android:textColor="@color/text_home_color"
                app:layout_constraintTop_toTopOf="@id/txt_num_maxmin"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_visibilidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                android:text="@string/txt_visibilidade"
                android:textSize="14sp"
                android:textColor="@color/text_home_color"
                app:layout_constraintTop_toTopOf="@id/txt_umidade"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_num_visibilidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="293dp"
                android:text="@string/txt_num_visibilidade"
                android:textSize="14sp"
                android:textColor="@color/text_home_color"
                app:layout_constraintTop_toTopOf="@id/txt_num_umidade"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

